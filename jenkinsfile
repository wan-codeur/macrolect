pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "wan57/macrolect"  // Remplace par ton username Docker Hub + ton projet
        DOCKER_TAG = "1.0.0"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/wan-codeur/macrolect.git'
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                }
            }
        }
        stage('Image deploiement')
        {
            steps
            {
                script
                {
                    sh "docker compose up -d macrolect"
                    sh "docker compose up -d macrolect-db"
                }
            }
        }
    }
}
